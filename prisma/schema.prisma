// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model projects {
  id          String    @id @default(auto())  @map("_id")   @db.ObjectId
  title       String
  description String
  img         String?
  createdAt   DateTime  @default(now())
  time        String
  client      String
  repo        String
  role        String[]
  site        String
  tags        String[]
}
